datasource db {
  // provider     = "sqlite"
  provider     = "mysql"
  url          = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode = "prisma" // Connect with PlanetScale
}

// Criar Tabelas/Models
// Usuário
model User {
  id String @id @default(cuid()) // Dizer q é Primary Key - Obs: O Auto Increment ñ é mt seguro

  name      String? // Nullable
  avatarUrl String?
  email     String   @unique
  password  String
  cash      Float    @default(15)
  createdAt DateTime @default(now())

  cart Cart[] // Relacionameto Inverso
}

// Carrinho de Compra
model Cart {
  id     String @id @default(cuid())
  userId String

  productName  String
  productPrice Float
  category     Categories
  addedAt      DateTime   @default(now())

  // Relacionamentos
  user User @relation(fields: [userId], references: [id])

  @@index([userId]) // In MySQL
}

enum Categories {
  Food
  Fruits
  Eletronics
  Video_Games
  Clothes
  Sports
  House
  Others
}
